<div class="row order-summary" style="margin-left: 10px;">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
    <h2 class="text-center">Podsumowanie zamówienia nr <%= @order.id %></h2>
    <div class="row">
      <div class="col-xs-4">
        <h3>Imię i nazwisko</h3>
      </div>
      <div class="col-xs-8">
        <h3><strong><%= @order.name %></strong></h3>
      </div>
      <div class="col-xs-4">
        <h3>Adres dostawy</h3>
      </div>
      <div class="col-xs-8">
        <h3><strong><%= @order.address %></strong></h3>
      </div>
      <div class="col-xs-4">
        <h3>Email</h3>
      </div>
      <div class="col-xs-8">
        <h3><strong><%= @order.email %></strong></h3>
      </div>
      <div class="col-xs-4">
        <h3>Sposób zapłaty</h3>
      </div>
      <div class="col-xs-8">
        <h3><strong><%= @order.pay_type %></strong></h3>
      </div>
      <div class="col-xs-12 items well text-center">
        <h3 class="text-center" style="margin-top: 10px;"><strong>Zakupione produkty</strong></h3>
        <% @order.line_items.each do |item| %>
          <div class="col-xs-4" style="border-right: 1px solid">
            <h3><%= link_to item.product.title, product_path(item.product_id) %></h3>
          </div>
          <div class="col-xs-4" style="border-right: 1px solid">
            <h3><%= item.quantity %> x <%= number_to_currency(item.product.price, locale: :pl) %></h3>
          </div>
          <div class="col-xs-4">
            <h3><%= number_to_currency(item.total_price, locale: :pl) %></h3>
          </div>
        <% end %>
        <div class="col-xs-2 col-xs-offset-6">
          <h3><strong>Suma: </strong></h3>
        </div>
        <div class="col-xs-4">
          <h3 class="order-sum"><strong><%= number_to_currency(@order.total_price, locale: :pl) %></strong></h3>
        </div>
      </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
