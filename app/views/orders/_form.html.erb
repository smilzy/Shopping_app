<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Imię" %>
    <%= f.text_field :name, size: 40 %>
  </div>

  <div class="field">
    <%= f.label "Adres" %>
    <%= f.text_area :address, rows: 3, cols: 40 %>
  </div>

  <div class="field">
    <%= f.label "E-mail" %>
    <%= f.text_field :email, size: 40 %>
  </div>

  <div class="field">
    <%= f.label "Sposób zapłaty" %>
    <%= f.select :pay_type, Order.pay_types.keys,
                        prompt: 'Wybierz metodę płatności' %>
  </div>

  <div class="actions">
    <%= f.label " " %>
    <%= f.submit 'Złóż zamówienie', class: "btn btn-md btn-primary" %>
  </div>
<% end %>
