<p id="notice"><%= notice %></p>

<h1>Katalog produkt√≥w</h1>

<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <% if product.avatar? %>
          <%= image_tag(product.avatar) %>
        <% else %>
          <%= link_to(image_tag(product.image_url), product_path(id: product.id)) %>
        <% end %>
        <h3><%= link_to product.title, product_path(id: product.id) %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= number_to_currency(product.price, locale: :pl) %></span>
          <%= button_to 'Dodaj do Koszyka', line_items_path(product_id: product),
          remote: true, class: "btn btn-small btn-default" %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>