<% if line_item == @current_item %>
<tr id="current_item">
<% else %>
<tr>
<% end %>
  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price"><%= number_to_currency(line_item.total_price, locale: :pl) %></td>
  <td class="delete-link"><%= link_to 'X', line_item_path(line_item.id),
  method: :delete, data: {confirm: 'Czy na pewno chcesz usunąć przedmioty z koszyka?' } %></td>
</tr>