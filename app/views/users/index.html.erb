<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
    <h1>Tabela użytkowników</h1>
    <table class="table table-hover table-striped">
      <thead class="thead-inverse">
        <tr>
          <th>#</th>
          <th>Imię</th>
          <th>Admin</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="row"><%= user.id %></th>
          <td><%= user.name %></td>
          <td><%= link_to link_to "<span class='glyphicon glyphicon-search'></span>"
                        .html_safe, user, class: 'btn btn-xs btn-success' %>
            <%= link_to link_to "<span class='glyphicon glyphicon-pencil'></span>"
                        .html_safe, edit_user_path(user), class: 'btn btn-xs btn-default' %>
            <% if session[:user_id] != user.id %>
              <%= link_to "<span class='glyphicon glyphicon-trash'></span>"
                        .html_safe, user, method: :delete,
                        data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
            <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

