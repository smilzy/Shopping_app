<p id="notice"><%= notice %></p>

<h2>Twój koszyk</h2>
<table>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price, locale: :pl) %></td>
      <td class="delete-link"><%= link_to 'Usuń element', line_item_path(item.id),
      method: :delete, data: {confirm: 'Czy na pewno chcesz usunąć przedmioty z koszyka?' } %></td>
    </tr>
  <% end %>
  
  <tr class="total_line">
    <td colspan="2">Suma:</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, locale: :pl) %></td>
  </tr>
</table>

<%= button_to 'Wyczyść koszyk', @cart, method: :delete,
data: {confirm: 'Czy na pewno chcesz usunąć zawartość koszyka?' } %>
